{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-S",
                ".",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug",
                "--target",
                "demo",
                "-j",
                "8"
            ],
            "group": "build",
            "dependsOn": [
                "CMake Configure"
            ],
            "problemMatcher": "$gcc"
        },
        {
            "label": "Configure (debug-msvc preset)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--preset",
                "debug-msvc"
            ],
            "group": "build"
        },
        {
            "label": "Build (debug-msvc preset)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "--preset",
                "debug-msvc"
            ],
            "group": "build",
            "dependsOn": [
                "Configure (debug-msvc preset)"
            ]
        },
        {
            "label": "Configure (release-msvc preset)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--preset",
                "release-msvc"
            ],
            "group": "build"
        },
        {
            "label": "Build (release-msvc preset)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "--preset",
                "release-msvc"
            ],
            "group": "build",
            "dependsOn": [
                "Configure (release-msvc preset)"
            ]
        },
        {
            "label": "Run (release-msvc preset)",
            "type": "shell",
            "command": "${workspaceFolder}/build/msvc/Release/demo.exe",
            "dependsOn": [
                "Build (release-msvc preset)"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": false
            }
        }
    ]
}